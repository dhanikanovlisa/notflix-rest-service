generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user    Int     @id @default(autoincrement())
  username String  @unique
  last_name  String?
  first_name String?
  password  String?
  email     String  @unique
  phone_number String?
  photo_profile  String?
  is_admin Boolean @default(false)
}

model Film {
  film_id         Int        @id @default(autoincrement())
  title           String
  description     String
  film_path       String
  film_poster     String
  film_header     String
  date_release    DateTime
  duration        Int
  film_genres     film_genre[]
}

model Genre {
  genre_id   Int        @id @default(autoincrement())
  name       String
  film_genres film_genre[]
}

model film_genre {
  film_genre_id Int @id @default(autoincrement())
  film_id       Int
  genre_id      Int
  film          Film @relation(fields: [film_id], references: [film_id])
  genre         Genre @relation(fields: [genre_id], references: [genre_id])
}